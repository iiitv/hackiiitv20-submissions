<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:elevation="16dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="0dp"
        android:id="@+id/webIconImg"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        app:viewAspectRatio="1"
        android:adjustViewBounds="true"
        android:layout_height="match_parent" />

    <TextView
        android:layout_toEndOf="@+id/webIconImg"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/webName"
        android:textStyle="bold"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@id/webIconImg"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="15dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        android:textSize="16sp"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:drawableEnd="@drawable/more_next"
        android:text="Click here to visit"
        android:layout_marginTop="1dp"
        android:layout_below="@id/webName"
        android:id="@+id/webUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>